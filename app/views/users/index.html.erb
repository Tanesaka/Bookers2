<div class='row'>
<div class='col-md-3'>
<%= render partial: "books/book", locals:{ book: @book, user: @user }%>
</div>
</div>

<div class='row'>
<div class='col-md-8'>
<h1>Users</h1>
<table class="table table-striped">
<thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
</thead>

<tbody>
<% @users.each do |user| %>
<tr>
<td>
<%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "images/no_image.jpg" %>
</td>

<td><%= user.name %></td>

<td><%= link_to "Show", user_path(user.id) %></td>

</tr>
<% end %>
  </tbody>
  </table>
</div>
</div>
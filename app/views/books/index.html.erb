
<div class='row'>
<div class='col-md-3'>
<%= render partial: "books/book", locals:{ book: @book, user: @user }%>
</div>
</div>

<div class='row'>
<div class='col-md-8'>

<h1>Books</h1>
<table class="table table-striped">
<thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
</thead>

 <tbody>
<% @books.each do |book| %>
<tr>
  <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "images/no_image.jpg" %></td>

  <td>
  <%= link_to book_path(book.id) do %>
  <%= book.title %>
  <% end %></td>

  <td><%= book.body %><td>
</tr>
   <% end %>
  </tbody>
  </table>
</div>
</div>
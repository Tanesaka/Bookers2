<div class="containar">
  <div class="row no-gutters">
     <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">

<h2 class="text-dark bg-light p-4 mb-0">User info</h2>
<div class="form-body p-4">

<%= form_with model:@user, local:true do |f| %>
  <div>
  <label for="inputName">Name</label>
  <br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name" %>
  </div>

 <div>
  <label for="inputImage">Image</label>
  <br>
  <%= f.attachment_field :profile_image, placeholder: "Image" %>
 </div>

 <div>
  <label for="inputProfile">Introduction</label>
  <br>
    <%= f.text_area :introduction, autofocus: true, id:"inputProfile", placeholder:"Introduction" %>
 </div>
 <hr>
  <%= f.submit "Update User", class:"btn btn-lg btn-block btn-info mt-4" %>

</div>
<% end %>
   </div>
  </div>
</div>